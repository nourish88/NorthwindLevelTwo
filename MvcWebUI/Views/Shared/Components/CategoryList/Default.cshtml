@model MvcWebUI.Models.CategoryListViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<div class="list-group">
    <a href="/Product/Index"  class="list-group-item"> Tümünü Göster</a>
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }

        <a href="/Product/Index?category=@item.CategoryId" class="@css"> @item.CategoryName</a>


    }
</div>