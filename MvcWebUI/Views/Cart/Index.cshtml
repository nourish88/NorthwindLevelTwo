@model CartListViewModel

<h1>Sepetiniz</h1>
@if (Model.Cart.CartLines.Count == 0){
    <span class="badge badge-danger"> Sepetiniz boş</span>
}
else
{<table class="table table-responsive">
    <thead>
        <tr>
            <th> Id </th>
            <th> Ürün Adı </th>
            <th> Açıklama </th>
            <th> Fiyat </th>
            <th> Stok Adedi </th>
            <th> Satış Adedi </th>
            <th> İşlem </th>
        </tr>


    </thead>
    @foreach (var item in Model.Cart.CartLines)
    {

        <tr>
            <td>@item.Product.ProductId</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.QuantityPerUnit</td>
            <td>@item.Product.UnitPrice</td>
            <td>@item.Product.UnitsInStock</td>
            <td>@item.Quantity</td>
            <td> <a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@item.Product.ProductId">Sepetten çıkar </a>   </td>
        </tr>
    }




</table>

}
