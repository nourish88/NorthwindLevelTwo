@model ShippingDetailsViewModel

    <form asp-controller="Cart" asp-action="Complete" method="post">

        <div class="form-group">
            <label asp-for="ShippingDetail.FirstName">İsim</label>
            <input asp-for="ShippingDetail.FirstName " class="form-control" placeholder="Müşteri Adı" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.FirstName "></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.LastName">Soyad</label>
            <input asp-for="ShippingDetail.LastName " class="form-control" placeholder="Müşteri Soyadı" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.FirstName "></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Email">İsim</label>
            <input type="email" asp-for="ShippingDetail.Email " class="form-control" placeholder="Müşteri Email" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.LastName "></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Age">Yaş</label>
            <input asp-for="ShippingDetail.Age " class="form-control" placeholder="Müşteri Yaşı" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.Age "></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.City">Şehir</label>
            <input asp-for="ShippingDetail.City " class="form-control" placeholder="Müşteri İli" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.City "></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Address">Address</label>

            <input asp-for="ShippingDetail.Address " class="form-control" placeholder="Müşteri Address" />
            <span class="font-weight-bold text-danger" asp-validation-for="ShippingDetail.Address "></span>
        </div>
                <input type="submit" class="btn btn-sm btn-success" />
         


    </form>
